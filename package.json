{
  "name": "genji-esm",
  "version": "1.0.0",
  "description": "a vue state management framewok by vue3 reactivity",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --fix --ext .js,.ts",
    "format": "prettier --write \".//**/*.js\" \"src/**/*.ts\" \"tests/**/*.ts\" \"example/**/*.ts\"  \"example/**/*.vue\" ",
    "commit": "git-cz",
    "build": "rollup -c",
    "test": "jest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xieyezi/juefei.git"
  },
  "author": "xieyezi",
  "license": "MIT",
  "keywords": [
    "vue3",
    "vue3 reactivity",
    "vue3 hooks",
    "hooks",
    "redux",
    "vuex",
    "vue-composition api",
    "dva",
    "state",
    "manager",
    "management",
    "store"
  ],
  "bugs": {
    "url": "https://github.com/xieyezi/juefei/issues"
  },
  "homepage": "https://github.com/xieyezi/juefei#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/parser": "^4.23.0",
    "@vue/reactivity": "^3.0.11",
    "axios": "^0.21.1",
    "commitizen": "^4.0.3",
    "cz-customizable": "^6.2.0",
    "esbuild": "^0.11.23",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rollup": "^2.48.0",
    "rollup-plugin-esbuild": "^4.2.3",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "vitepress": "^0.13.2"
  },
  "peerDependencies": {
    "@vue/reactivity": "^3.0.11"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "cz-customizable": {
    "config": ".cz-config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  }
}
